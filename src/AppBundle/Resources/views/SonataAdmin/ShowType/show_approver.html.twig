{% extends admin.getTemplate('base_list_field') %}

{% block field %}
    <div class="row" style="border-bottom: 1px solid #f4f4f4; margin-bottom: 10px;padding-bottom: 10px;">

        <table class="table">
            <thead>
            <tr>
                <th>Approver</th>
                <th>Date Time Stamp</th>
                <th>Action</th>
                <th>Remarks</th>
            </tr>
            </thead>
            <tbody>
            {% if object.approver and object.approver.approver1 %}
                <tr>
                    <td>{{ object.approver.approver1.firstName ~' '~ object.approver.approver1.lastName }}</td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            {% endif %}
            {% if object.approver and object.approver.approver2 %}
                <tr>
                    <td>{{ object.approver.approver2.firstName ~' '~ object.approver.approver2.lastName }}</td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            {% endif %}
            {% if object.approver and object.approver.approver3 %}
                <tr>
                    <td>{{ object.approver.approver3.firstName ~' '~ object.approver.approver3.lastName }}</td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            {% endif %}
            </tbody>
        </table>

    </div>

{% endblock %}
