{% extends base_template %}

{% block content %}
    {% for flashMessage in app.session.flashbag.get('message') %}
        <div class="alert alert-success alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            {{ flashMessage }}
        </div>
    {% endfor %}
    {% for flashError in app.session.flashbag.get('error') %}
        <div class="alert alert-danger alert-dismissable">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            {{ flashError }}
        </div>
    {% endfor %}
    <div class="sonata-ba-form">


        <form role="form" action="" method="POST">

            {{ form_row(form._token) }}
            <div class="row">


                <div class="col-md-12">
                    <div class="col-md-12">
                        <div class="box box-primary">
                            <div class="box-header" style="text-align: center">
                                <h4 class="box-title">
                                    Change password
                                </h4>
                            </div>
                            <div class="box-body">
                                <div class="sonata-ba-collapsed-fields">
                                    <div class="form-group">

                                        <label class="control-label required" for="">
                                            New Password
                                        </label>
                                        <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                            <div id="" class="field-container">

                                                {{ form_widget(form.plainPassword.first,{'attr':{'class':'form-control','placeholder':'New password'}}) }}

                                            </div>

                                        </div>
                                    </div>
                                    <div class="form-group">

                                        <label class="control-label required" for="">
                                            Retype new password
                                        </label>
                                        <div class="sonata-ba-field sonata-ba-field-standard-natural">
                                            <div id="" class="field-container">

                                                {{ form_widget(form.plainPassword.second,{'attr':{'class':'form-control','placeholder':'Retype new password'}}) }}

                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>

            </div>

            <div class="row" style="text-align: center;margin: 15px;">
                <div class="col-md-12 well">
                    <button class="btn btn-success btn-claim" type="submit" name="btn_create_and_edit">SUBMIT
                    </button>
                </div>
            </div>
        </form>


    </div>

{% endblock %}
