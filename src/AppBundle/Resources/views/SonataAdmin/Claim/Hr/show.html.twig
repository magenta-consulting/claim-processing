{% extends base_template %}

{% import 'SonataAdminBundle:CRUD:base_show_macro.html.twig' as show_helper %}

{%- block actions -%}
    <li><a class="sonata-action-element"
           href="{{ path('admin_app_claim_list',{'type':'hr-each-position','position-id':object.position.id}) }}"><i
                    class="fa fa-list" aria-hidden="true"></i>
            Return to list</a></li>
{%- endblock -%}

             {% block sonata_breadcrumb %}
                 <div class="navbar-left">
                     <div class="hidden-xs">
                         <ol class="nav navbar-top-links breadcrumb">
                             <li>
                                 <a href="{{ path('sonata_admin_dashboard') }}">Dashboard</a>
                             </li>
                             <li>
                                 <a href="{{ path('admin_app_position_list',{'type':'hr'}) }}">Process Employee Claims
                                 </a>
                             </li>
                             <li>
                                 <a href="{{ path('admin_app_claim_list',{'type':'hr-each-position','position-id':object.position.id}) }}">{{ getNameUser(object.position.id) }}</a>
                             </li>
                             <li class="active"><span>List</span></li>
                         </ol>
                     </div>
                 </div>
             {% endblock sonata_breadcrumb %}

{% block show %}
    <div class="sonata-ba-view">

        {{ sonata_block_render_event('sonata.admin.show.top', { 'admin': admin, 'object': object }) }}

        {% set has_tab = (admin.showtabs|length == 1 and admin.showtabs|keys[0] != 'default') or admin.showtabs|length > 1 %}

        {% if has_tab %}
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs" role="tablist">
                    {% for name, show_tab in admin.showtabs %}
                        <li{% if loop.first %} class="active"{% endif %}>
                            <a href="#tab_{{ admin.uniqid }}_{{ loop.index }}" data-toggle="tab">
                                <i class="fa fa-exclamation-circle has-errors hide" aria-hidden="true"></i>
                                {{ name|trans({}, show_tab.translation_domain ?: admin.translationDomain) }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>

                <div class="tab-content">
                    {% for code, show_tab in admin.showtabs %}
                        <div
                                class="tab-pane fade{% if loop.first %} in active{% endif %}"
                                id="tab_{{ admin.uniqid }}_{{ loop.index }}"
                        >
                            <div class="box-body  container-fluid">
                                <div class="sonata-ba-collapsed-fields">
                                    {% if show_tab.description != false %}
                                        <p>{{ show_tab.description|raw }}</p>
                                    {% endif %}

                                    {{ show_helper.render_groups(admin, object, elements, show_tab.groups, has_tab) }}
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        {% elseif admin.showtabs is iterable %}
            {{ show_helper.render_groups(admin, object, elements, admin.showtabs.default.groups, has_tab) }}
        {% endif %}

    </div>
        <div class="sonata-ba-view">
            {% if isShowDeleteRejectHrButtonForClaim(object) %}
                <form method="post" action="{{ path('admin_app_claim_show',{'id':admin.id(object)}) }}">
                    <div class="sonata-ba-form-actions well well-small form-actions">
                        <button type="submit" class="btn btn-success" name="btn_hr_delete" value="1"> Delete
                        </button>
                        <button type="submit" class="btn btn-danger" name="btn_hr_reject" value="1"> Reject
                        </button>
                    </div>
                </form>
            {% endif %}
        </div>

    {{ sonata_block_render_event('sonata.admin.show.bottom', { 'admin': admin, 'object': object }) }}
{% endblock %}

