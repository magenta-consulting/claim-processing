{% extends admin.getTemplate('base_list_field') %}

{% block field %}
    {% if object.pendingClaims.count > 0 %}
        {% set claim = object.pendingClaims[0] %}
        {{ claim.periodFrom | date('d M Y') }} - {{ claim.periodTo | date('d M Y') }}
    {% else %}
        N/A
    {% endif %}
    {#

    {% if app.request.get('filter') is not empty %}
        {% set from = null %}
        {% if app.request.get('filter')['claim_period']['value'] != 'all' %}
            {% set from = date(app.request.get('filter')['claim_period']['value']) %}
        {% endif %}

    {% else %}
        {% set from = getCurrentClaimPeriod('from') %}
    {% endif %}

 {{ filterClaimCollectionByPeriod(object.claims, from) | date('M d Y') }}

