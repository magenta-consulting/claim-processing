</div>
<!--[if lt IE 7]>
<p class="alert alert-danger">You are using an <strong>outdated</strong> browser. Please <a
        href="http://browsehappy.com/">upgrade your browser</a> to improve your experience.</p>
<![endif]-->

<div class="color-line"></div>


<div class="login-container">
    <div class="row">
        <div class="col-md-12">
            <div class="text-center m-b-md">
                <h3>PLEASE LOGIN TO APP</h3>
                <small>This is the best app ever!</small>
            </div>
            <div class="hpanel">
                <div class="panel-body">
                    {% if error %}
                        <div id="errormsg" class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}
                    <form id="loginForm" class="validate-form" novalidate action="{{ path("fos_user_security_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                        <div class="form-group">
                            <input type="text" placeholder="Email Address" title="Please enter you username"
                                   required="" value="{{ last_username }}" name="_username" id="username"
                                   class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="password" title="Please enter your password" placeholder="Password" required=""
                                   value="" name="_password" id="password" class="form-control">
                        </div>
                        <div class="checkbox">
                            <input type="checkbox" class="i-checks" name="_remember_me" id="remember_me" checked>
                            Remember login
                        </div>
                        <div class="form-group">
                            Forgot <a href="{{ path('fos_user_resetting_request') }}" title="User ID" tabindex="4">Password</a>?
                        </div>
                        <div class="form-group">
                            <a href="{{ path('fos_user_registration_register') }}" title="" tabindex="5">Register a new user</a>
                        </div>
                        <input class="btn btn-success btn-block" type="submit" id="_submit" name="_submit"
                               value="Login"/>
                    </form>
                    <h4 class="text-center">OR</h4>
                    <form id="loginFormByCode" class="validate-form" novalidate action="{{ path("fos_user_security_check") }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                        <div class="form-group">
                            <input type="password" title="Please enter your invitation code" placeholder="Enter Interview Invitation Code" required=""
                                   value="" name="_password" id="password" class="form-control">
                        </div>

                        <input class="btn btn-success btn-block" type="submit" id="_submit" name="_submit"
                               value="Start Interview"/>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<!-- Vendor scripts -->
<script src="{{ asset('bundles/job/homer/vendor/jquery/dist/jquery.min.js') }}"></script>
<script src="{{ asset('bundles/job/homer/vendor/jquery-ui/jquery-ui.min.js') }}"></script>
